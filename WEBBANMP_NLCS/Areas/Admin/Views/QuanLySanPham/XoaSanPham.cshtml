@model WEBBANMP_NLCS.Models.SANPHAM
@{
    ViewBag.Title = "XoaSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xác nhận xóa sản phẩm</h2>

@using (Html.BeginForm("XacNhanXoaSanPham", "QuanLySanPham", FormMethod.Post))
{


<div class="form-horizontal">

    <hr />
 
    @Html.Hidden("SP_MA", Model.SP_MA)
    <div class="form-group">
        @Html.LabelFor(model => model.SP_TEN, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SP_TEN, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
          
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NSX_MA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("NSX_MA", null, new { @class = "form-control col-md-5", @disabled = "disabled" })
          
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.L_MA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("L_MA", null, new { @class = "form-control col-md-5", @disabled = "disabled" })
          
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.SP_GIA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SP_GIA, new { htmlAttributes = new { @class = "form-control col-md-5", @disabled = "disabled" } })
      
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SP_SL, htmlAttributes: new { @class = "control-label col-md-2 " })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SP_SL, new { htmlAttributes = new { @class = "form-control col-md-5", @disabled = "disabled" } })
          
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SP_MOTA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.SP_MOTA, new { @class = "form-control", @disabled = "disabled" })
           
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SP_HINH, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10"> <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.SP_HINH)" width="100" height="100" /></div><br />
      
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>


