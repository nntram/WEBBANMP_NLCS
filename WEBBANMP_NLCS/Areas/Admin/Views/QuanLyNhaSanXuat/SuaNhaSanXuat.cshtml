@model WEBBANMP_NLCS.Models.NHASANXUAT
@{
    ViewBag.Title = "SuaNhaSanXuat";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sửa nhà sản xuất</h2>

@using (Html.BeginForm("SuaNhaSanXuat", "QuanLyNhaSanXuat", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("NSX_MA", Model.NSX_MA)
    <label class = "control-label col-md-2">Mã nhà sản xuất: @Model.NSX_MA</label>
    <div class="form-group">
        @Html.LabelFor(model => model.NSX_TEN, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NSX_TEN, new { htmlAttributes = new { @class = "form-control" }, @required = "required" })
            @Html.ValidationMessageFor(model => model.NSX_TEN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NSX_MOTA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.NSX_MOTA, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NSX_MOTA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>

