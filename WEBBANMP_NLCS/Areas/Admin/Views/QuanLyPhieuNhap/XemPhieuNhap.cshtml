@using WEBBANMP_NLCS.Models
@model PHIEUNHAP
@{
    ViewBag.Title = "XemPhieuNhap";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    List<CHITIETPHIEUNHAP> lstCT = (List<CHITIETPHIEUNHAP>)ViewBag.ChiTietPN;
}

<h2>Chi tiết phiếu nhập</h2>

<div class="noiDung">
    <div class="form-horizontal">

        <hr />
        <div class="form-group">
            <label class="control-label">Mã phiếu nhập: @Model.PN_MA</label>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.PN_NGAYNHAP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="form-control col-md-3">@Model.PN_NGAYNHAP</label>

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NCC_MA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="form-control">@Model.NHACUNGCAP.NCC_TEN</label>

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3"> Nhân viên nhập hàng: </label>
            <div class="col-md-10">
                <label class="form-control">@Model.NHANVIEN.NV_HOTEN</label>

            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.PN_GHICHU, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="form-control">@Model.PN_GHICHU</label>
            </div>
        </div>

        <br />

        @*Phần chi tiết nhập hàng*@
        <table class="table">

            <tr class="row">
                <td class="col-md-7">Sản phẩm</td>
                <td class="col-md-3">Đơn giá nhập</td>
                <td class="col-md-2">Số lượng nhập</td>

            </tr>

            @{
                foreach (var item in lstCT)
                {
                    <tr class="row">
                        <td class="col-md-7">
                                        <label class="form-control">@item.SANPHAM.SP_TEN</label>
                        </td>
                        <td class="col-md-3">
                                        <label class="form-control">@string.Format("{0:#,##0}", item.DONGIANHAP) VNĐ</label>
                        </td>
                        <td class="col-md-2">
                                        <label class="form-control">@item.SOLUONGNHAP</label>
                        </td>

                    </tr>
                }
            }



        </table>


    </div>
</div>

<a class="btn btn-primary" id="btnInDonHang">In phiếu nhập</a>
<div>
    @Html.ActionLink("Trở về", "Index")
</div>


