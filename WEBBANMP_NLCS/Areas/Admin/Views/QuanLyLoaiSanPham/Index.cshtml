@using WEBBANMP_NLCS.Models
@using System.Globalization
@model IEnumerable<LOAISANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    // khởi tạo control webgrid
    WebGrid grid = new WebGrid(source: Model);
}

<h1 class="h3 mb-2 text-gray-800">Quản lý loại sản phẩm</h1>

<div class="card-header py-3">
    <a class="btn btn-info" href="@Url.Action("TaoMoiLoaiSanPham")"> <i class="fas fa-plus"></i> Tạo mới</a>
</div>

@grid.GetHtml(
   tableStyle: "table table-bordered table-hover",
   headerStyle: "thead-light text-center",
   columns: grid.Columns(
     grid.Column("L_MA", "Mã loại sản phẩm", style: "text-center"),
     grid.Column("L_TEN", "Tên loại sản phẩm"),
     grid.Column(format: p => @Html.ActionLink("Sửa", "SuaLoaiSanPham", new { id = p.L_MA })),
     grid.Column(format: p => @Html.ActionLink("Xóa", "XoaLoaiSanPham", new { id = p.L_MA }))
   )
)


