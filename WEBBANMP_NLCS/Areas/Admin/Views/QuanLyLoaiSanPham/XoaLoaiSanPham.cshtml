@model WEBBANMP_NLCS.Models.LOAISANPHAM
@{
    ViewBag.Title = "XoaLoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xác nhận xóa loại sản phẩm</h2>

@using (Html.BeginForm("XacNhanXoaLoaiSanPham", "QuanLyLoaiSanPham", FormMethod.Post))
{


<div class="form-horizontal">

    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("L_MA", Model.L_MA)
    <label class="control-label col-md-2">Mã loại sản phẩm: @Model.L_MA</label>
    <div class="form-group">
        @Html.LabelFor(model => model.L_TEN, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.L_TEN, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.L_TEN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.L_MOTA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.L_MOTA, new { @class = "form-control", @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.L_MOTA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>


