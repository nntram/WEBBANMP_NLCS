@model WEBBANMP_NLCS.Models.KHACHHANG
@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Layout/_AccountLayout.cshtml";
}

<div class="col-sm-4">
</div>
<div class="col-sm-4">
    <div class="signup-form">
        <!--sign up form-->
        <h2 class="title text-center">Đổi mật khẩu</h2>

        <form method="post" class="my-form">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h4 class="text-danger">@ViewBag.ThongBao</h4>

            @Html.HiddenFor(model => model.KH_TAIKHOAN);

            <label> Mật khẩu cũ:</label>
            <input type="password" placeholder="Mật khẩu cũ" name="matkhaucu" required>
            <div>@Html.ValidationMessageFor(model => model.KH_MATKHAU, "", new { @class = "text-danger" })</div>

            <label> Mật khẩu mới:</label>
            <input type="password" placeholder="Mật khẩu mới" name="matkhaumoi" required>
            <div>@Html.ValidationMessageFor(model => model.KH_MATKHAU, "", new { @class = "text-danger" })</div>

            <label> Nhập lại mật khẩu mới:</label>
            <input type="password" placeholder="Nhập lại mật khẩu mới" name="nhaplaimatkhau" required>



            <button type="submit" class="btn btn-default center-block">Lưu thay đổi</button>
            <center><a href="@Url.Action("Index", "Home")"><h3 class="btn btn-default">Hủy</h3></a></center>
        </form>
</div>
    </div>


