@using PagedList.Mvc
@model PagedList.IPagedList<WEBBANMP_NLCS.Models.SANPHAM>
@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Layout/_HomeLayout.cshtml";
}

@Html.Partial("SanPhamPartial", Model)

<div class="text-right">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("LoaiSanPham", new { page = page, @MaLoaiSP = ViewBag.MaLoaiSP }))
</div>